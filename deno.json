{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.5.2/",
    "blog/": "https://deno.land/x/lume_theme_simple_blog@v0.15.10/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@v0.9.4/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "prod": "deno task lume --location=https://xeo.land",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "d": "deno task serve",
    "cms": "deno task lume cms",
    "lup": "deno task lume upgrade",
    "lupd": "deno task lume upgrade --dev",
    "up": "deno run -A --quiet 'https://deno.land/x/nudd@v0.2.9/cli.ts' update deno.json"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  }
}
